# Database (Vercel Postgres)
POSTGRES_URL="postgres://user:pass@host/db"
POSTGRES_PRISMA_URL="postgres://user:pass@host/db?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgres://user:pass@host/db"

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_API_URL=https://api-m.sandbox.paypal.com
# Für Live-Betrieb ändern zu: https://api-m.paypal.com

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Dein Name" <noreply@yourdomain.com>

# MailerLite API (für E-Mail-Automation)
MAILERLITE_API_KEY=your_mailerlite_api_key
MAILERLITE_GROUP_PRODUCTS=12345
MAILERLITE_GROUP_COURSES=12346
MAILERLITE_GROUP_BUSINESS=12347
MAILERLITE_GROUP_CUSTOMERS=12348

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Für Live-Betrieb ändern zu: https://yourdomain.com
NODE_ENV=development

# Security (Member Area)
JWT_SECRET=your-very-long-random-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# Social Media Tracking (Optional)
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
